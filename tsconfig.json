{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "src",
    "allowJs": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "src/constants/testing.ts"]
}